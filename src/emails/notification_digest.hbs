---
layout: layout.hbs
subject: "{{announcer_name}} made an annoucenemt"
preheader:
---
<table class="email-content" width="100%" cellpadding="0" cellspacing="0">

  {{> masthead }}

  <!-- Email Body -->
  <tr>
    <td class="email-body" width="100%" cellpadding="0" cellspacing="0">
      <table class="email-body_inner" align="center" width="570" cellpadding="0" cellspacing="0">

        <!-- Body content -->
        <tr>
          <td class="content-cell">

            <table class="notifications" width="100%" cellpadding="0" cellspacing="0">
              <tr>
                <td class="notifications_content">
                  <table width="100%" cellpadding="0" cellspacing="0">
                    
                    <tr>
                      <td class="notifications_item">
                        <table width="100%" cellpadding="0" cellspacing="0">
                          <tr>
                            <td class="notification_icon">
                              <img title="comment" src="https://s3.amazonaws.com/kyte-email-assets/email/images/comment_icon.png">
                            </td>
                            <td>
                              <a class="notifications_link" href="{{attachment_url}}">
                                Comment<br>
                                <span class="notifications_description">You have done a great job today! We are all so very proud of you
                                  and your accomplishments.</span><br>
                                1 hour ago
                              </a>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                    <tr>
                      <td class="notifications_item">
                        <table width="100%" cellpadding="0" cellspacing="0">
                          <tr>
                            <td class="notification_icon">
                              <img title="task" width="18" height="21" src="https://s3.amazonaws.com/kyte-email-assets/email/images/task_icon.png">
                            </td>
                            <td>
                              <a class="notifications_link" href="{{attachment_url}}">
                                Task<br>
                                <span class="notifications_description">Your task submission has been approved.</span><br>
                                1 hour ago
                              </a>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                    <tr>
                      <td class="notifications_item">
                        <table width="100%" cellpadding="0" cellspacing="0">
                          <tr>
                            <td class="notification_icon">
                              <img title="announcement" width="21" height="19" src="https://s3.amazonaws.com/kyte-email-assets/email/images/announcement_icon.png">
                            </td>
                            <td>
                              <a class="notifications_link" href="{{attachment_url}}">
                                Announcement<br>
                                <span class="notifications_description">Everyone needs to log their cute little bums in and complete some
                                  courses so that they learn a few new things in life.</span><br>
                                1 hour ago
                              </a>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
              <tr>
                <td height="100" class="align-right">
                  <a class="button button--pink" href="#">View all</a>
                </td>
              </tr>
            </table>

          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

{{> footer }}