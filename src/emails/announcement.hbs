---
layout: layout.hbs
subject: "{{announcer_name}} made an annoucenemt"
preheader:
---
<table class="email-content" width="100%" cellpadding="0" cellspacing="0">

  {{> masthead }}

  <!-- Email Body -->
  <tr>
    <td class="email-body" width="100%" cellpadding="0" cellspacing="0">
      <table class="email-body_inner" align="center" width="570" cellpadding="0" cellspacing="0">

        <!-- Body content -->
        <tr>
          <td class="content-cell">

            <h1 class="align-center">Hi \{{firstName}}!</h1>
            <h3 class="align-center">You have a new announcement from Cookie Monster.</h3>

            <table class="notifications" width="100%" cellpadding="0" cellspacing="0">
              <tr>
                <td class="notifications_content">
                  <table width="100%" cellpadding="0" cellspacing="0">
                    
                    <tr>
                      <td class="notifications_item">
                        <table width="100%" cellpadding="0" cellspacing="0">
                          \{{#announcement }}
                          <tr>
                            <td class="notification_icon">
                              <img title="comment" src="https://s3.amazonaws.com/kyte-email-assets/email/images/announcement_icon.png">
                            </td>
                            <td>
                              <a class="notifications_link" href="{{attachment_url}}">
                                Announcement<br>
                                <span class="notifications_description">\{{title}}.</span><br>
                                \{{time}} hour ago
                              </a>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                    \{{/announcement}}
                  </table>
                </td>
              </tr>
              <tr>
                <td height="100" class="align-right">
                  <a class="button button--pink" href="#">View</a>
                </td>
              </tr>
            </table>

          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

{{> footer }}